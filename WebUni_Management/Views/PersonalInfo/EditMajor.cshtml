@model WebUni_Management.Core.Models.PersonalInfo.MajorFormViewModel
@{
    ViewBag.Message = "Edit Major";
}<div class="edit-container">
    <h2>Edit major here:</h2>
    <form class="post-form" method="post">
        <div class="form-member">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name..">
            <span asp-validation-for="Name" class="validation"></span>
        </div>

        <div class="action-buttons">
            <form asp-controller="PersonalInfo" asp-action="EditMajor" method="post">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <form asp-controller="PersonalInfo" asp-action="SearchMajors" method="get">
                <button type="submit" class="btn btn-primary">Back</button>
            </form>
        </div>
    </form>

</div>

<style>
    .edit-container {
        height: 250px;
        width: 700px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 10px;
    }


    .post-form {
        display: flex;
        flex-direction: column;
        padding: 10px;
        height: 80%;
    }

    .form-member {
        margin-bottom: 20px;
    }

        .form-member label {
            font-weight: bold;
        }

        .form-member input {
            align-content: center;
            justify-content: center;
            width: 95%;
            height: 30px;
            border: 1px solid #e91e63;
            border-radius: 3px;
        }

    .form-select {
        width: 85%;
        border: 1px solid #e91e63;
        border-radius: 3px;
    }

    input.form-control[name="Content"] {
        height: 90px;
    }

    .validation {
        color: red;
    }

    form[asp-controller="PersonalInfo"][asp-action="AddMajor"] {
        width: 20%;
    }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #e91e63;
            border-color: #e91e63;
        }

    .action-buttons {
        display: flex;
        margin-top: auto;
        gap: 20px;
    }
</style>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
