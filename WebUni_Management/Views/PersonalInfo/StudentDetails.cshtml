@model WebUni_Management.Core.Models.PersonalInfo.StudentDetailsViewModel
@{
	ViewBag.Message = "Student Details";
}


<div class="details-container">
	
	<div class="news-description">
		<h2>@ViewBag.Message</h2>
		<h3><strong>Name</strong>: @Model.FirstName @Model.LastName <strong>Age</strong>: @Model.Age, <strong>Faculty number</strong>: @Model.FacultyNumber</h3>
		<h5><strong>Email</strong>: @Model.Email, <strong>Phone Number</strong>: @Model.PhoneNumber</h5>
		<h5><strong>Rented Books</strong>: @Model.RentedBooksCount, <strong>Rented Rooms</strong>: @Model.RentedStudyRoomsCount</h5>
		<h3>Subjects:</h3>
        @foreach (var subject in Model.Subjects)
		{
			<div class="subject-div">
			<h5><strong>Name:</strong> @subject.Name</h5>
				<form asp-controller="PersonalInfo" asp-action="ManageAttendance" method="get">
					<input type="hidden" name="subjectId" value="@subject.Id" />
					<input type="hidden" name="studentId" value="@Model.Id" />
					<button type="submit" class="btn btn-primary">Manage Attendance</button>
				</form>
				<form asp-controller="PersonalInfo" asp-action="ManageGrades" asp-route-id="@subject.Id" method="get">
					<button type="submit" class="btn btn-primary">Manage Grades</button>
				</form>
				<form asp-controller="PersonalInfo" asp-action="EditSubject" method="get">
					<input type="hidden" name="subjectId" value="@subject.Id" />
					<input type="hidden" name="studentId" value="@Model.Id" />
					<button type="submit" class="btn btn-primary">Edit Subject</button>
				</form>

			</div>
		}
		
		<div class="action-buttons">
			@*if (User.IsInRole("Admin"))
			{
				<form asp-controller="News" asp-action="Edit" asp-route-id="@Model.Id" method="get">
					<button type="submit" class="btn btn-primary">Edit</button>
				</form>
			}*@

			<form asp-controller="PersonalInfo" asp-action="SearchStudent" method="get">
				<button type="submit" class="btn btn-primary">Back</button>
			</form>
		</div>
	</div>
</div>
<style>
	h3, h5, h2{
		margin-bottom: 20px;
		
	}
	.subject-div{
		display: flex;
flex-direction: row;
gap: 20px;
margin-bottom:15px;
	}
	strong{
		color: #e93e63;
	}
	.details-container {
		height: 650px;
		width: 1130px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}


	.news-description {
		width: 100%;
		margin-top: 20px;
		height: 700px;
		float: right;
	}

		.news-description b {
			color: #e91e63;
		}

		.news-description h5 {
			color: black;
		}

		

	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}

	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 8px 18px;
		cursor: pointer;
	}

		.btn-primary:hover {
			background-color: #e91e63;
			border-color: #e91e63;
		}
</style>

