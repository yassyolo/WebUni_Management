@model WebUni_Management.Core.Models.PersonalInfo.FacultyDetailsViewModel
@{
	ViewBag.Message = "Student Details";
}


<div class="details-container">

	<div class="news-description">
		<h2>@ViewBag.Message</h2>
		<h3><strong>Name</strong>: @Model.Name</h3>
		<h5><strong>Description</strong>: @Model.Description</h5>
		
		<h3>Majors:</h3>
		@foreach (var subject in Model.Majors)
		{
			<div class="subject-div">
				<h5><strong>Name:</strong> @subject.Name</h5>
				<h5><strong>Description:</strong> @subject.Description</h5>
			</div>
		}

		<div class="action-buttons">
			<form asp-controller="PersonalInfo" asp-action="SearchFaculties" method="get">
				<button type="submit" class="btn btn-primary">Back</button>
			</form>
		</div>
	</div>
</div>
<style>
	h3, h5, h2 {
		margin-bottom: 20px;
	}

	.subject-div {
		display: flex;
		flex-direction: row;
		gap: 20px;
		margin-bottom: 15px;
	}

	strong {
		color: #e93e63;
	}

	.details-container {
		height: 2000px;
		width: 1130px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}


	.news-description {
		width: 100%;
		margin-top: 20px;
		height: 700px;
		float: right;
	}

		.news-description b {
			color: #e91e63;
		}

		.news-description h5 {
			color: black;
		}



	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}

	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 8px 18px;
		cursor: pointer;
	}

		.btn-primary:hover {
			background-color: #e91e63;
			border-color: #e91e63;
		}
</style>

