@model WebUni_Management.Core.Models.PersonalInfo.SeeMySubjectDetailsViewModel
@{
	ViewBag.Message = "Subject Details";
}


<div class="details-container">

	<div class="news-description">
		<h2>@ViewBag.Message</h2>
		<h3><strong>Name</strong>: @Model.Name</h3>
		<h5><strong>Total Attendance Count</strong>: @Model.TotlaAttendanceCount</h5>
		<h5><strong>Title</strong>: @Model.Professor.Title</h5>
		<h5><strong>First Name</strong>: @Model.Professor.FirstName, <strong>Last Name</strong>: @Model.Professor.LastName</h5>
		<h5><strong>Email</strong>: @Model.Professor.Email, <strong>Phone Number</strong>: @Model.Professor.PhoneNumber</h5>
		<h5><strong>Description</strong>: @Model.Professor.Description</h5>
		<h5><strong>Title</strong>: @Model.Assistant.Title</h5>
		<h5><strong>First Name</strong>: @Model.Assistant.FirstName, <strong>Last Name</strong>: @Model.Assistant.LastName</h5>
		<h5><strong>Email</strong>: @Model.Assistant.Email, <strong>Phone Number</strong>: @Model.Assistant.PhoneNumber</h5>
		<h5><strong>Description</strong>: @Model.Assistant.Description</h5>


		<div class="action-buttons">
			<form asp-controller="PersonalInfo" asp-action="SeeSubjects" asp-route-id="@Model.Id">
				<button type="submit" class="btn btn-primary">Back</button>
			</form>
		</div>
	</div>
</div>
<style>
	h3, h5, h2 {
		margin-bottom: 20px;
	}

	.subject-div {
		display: flex;
		flex-direction: row;
		gap: 20px;
		margin-bottom: 15px;
	}

	strong {
		color: #e93e63;
	}

	.details-container {
		height: 750px;
		width: 1130px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}


	.news-description {
		width: 100%;
		margin-top: 20px;
		height: 700px;
		float: right;
	}

		.news-description b {
			color: #e91e63;
		}

		.news-description h5 {
			color: black;
		}



	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}

	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 8px 18px;
		cursor: pointer;
	}

		.btn-primary:hover {
			background-color: #e91e63;
			border-color: #e91e63;
		}
</style>

