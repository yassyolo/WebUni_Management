@using System.Security.Claims
 @model WebUni_Management.Core.Models.PersonalInfo.MyJoinedEventsViewModel
@{
    ViewBag.Message = "View your joined events here!";
}

<div class="joined-events-container">
    <div class="showcase-message">
        <h2>@ViewBag.Message</h2>

    </div>
    @{
        var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        var maxPage = Math.Ceiling((double)Model.TotalEvents /
        Model.EventsPerPage);
    }
    <div class="pagination-buttons">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="PersonalInfo"
           asp-action="JoinedEvents"
           asp-route-currentPage="@previousPage"><<</a>
        @{
            var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
            !Model.Events.Any();
        }
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="PersonalInfo"
           asp-action="JoinedEvents"
           asp-route-currentPage="@(Model.CurrentPage + 1)">>></a>
    </div>

    @if (!Model.Events.Any())
    {
        <h2 class="text-center">No joined events!</h2>
    }

    <div class="card-container">
        @foreach (var ev in Model.Events)
        {
            <div class="card">
                <div class="image-card">
                    <img src="@ev.ImageUrl" />
                </div>
                <div class="text-card">
                    <h5><strong>Name</strong>:@ev.Name</h5>
                    <h5><strong>Lecturer</strong>:@ev.GuestParticipant</h5>
                    <h5><strong>Date</strong>:@ev.StartTime - @ev.EndTime</h5>
                    <form asp-controller="Event" asp-action="Details" asp-route-id="@ev.Id" method="get">
                        <button type="submit" class="btn btn-primary">Details</button>
                    </form>
                    <form asp-controller="PersonalInfo" asp-action="RemoveJoin" asp-route-id="@ev.Id" method="get">
                        <button type="submit" class="btn btn-primary">Remove</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .joined-events-container {
        height: 670px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        padding-top: 5px;
        padding: 10px;
        align-items: center;
    }

    .showcase-message {
        color: #e91e63;
        margin-bottom: 20px;
        text-align: center;
    }

    .card-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
    }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #e91e63;
        border-color: #e91e63;
    }

    .bold-label {
        font-weight: bold;
    }

    .pagination-buttons {
        display: flex;
        justify-content: center;
        align-content: space-around;
        margin-bottom: 30px;
    }

    .card {
        height: 280px;
        width: 510px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        flex-direction: row;
    }

    .image-card {
        height: 100%;
        width: 50%;
        float: right;
    }

    .image-card img {
        height: 100%;
        width: 100%;
    }

    .text-card {
        height: 100%;
        width: 50%;
        float: left;
        background-color: white;
        color: black;
    }

    strong {
        color: #e91e63
    }
</style>

