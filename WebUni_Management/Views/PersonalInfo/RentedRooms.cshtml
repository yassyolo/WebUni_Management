@model WebUni_Management.Core.Models.PersonalInfo.MyRentedRoomsViewModel
@{
    ViewBag.Message = "View your rented rooms here!";
}
<div class="rented-rooms-container">
    <div class="showcase-message">
        <h2>@ViewBag.Message</h2>
    </div>

    @{
        var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        var maxPage = Math.Ceiling((double)Model.TotalRooms /
        Model.RoomsPerPage);
    }
    <div class="pagination-buttons">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="PersonalInfo"
           asp-action="RentedRooms"
           asp-route-currentPage="@previousPage"><<</a>
        @{
            var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
            !Model.Rooms.Any();
        }
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="PersonalInfo"
           asp-action="RentedRooms"
           asp-route-currentPage="@(Model.CurrentPage + 1)">>></a>
    </div>

    @if (!Model.Rooms.Any())
    {
        <h2 class="text-center">No rooms rented!</h2>
    }

    <div class="flip-card-container">
        @foreach (var room in Model.Rooms)
        {
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="@room.ImageUrl" alt="Room">
                    </div>
                    <div class="flip-card-back">
                        <h6><strong>Name</strong>: @room.Name</h6>
                        <h6><strong>Capacity</strong>: @room.Capacity</h6>
                        @if (room.IsRented == false && User.IsInRole("Student"))
                        {
                            <form asp-controller="PersonalInfo" asp-action="RemoveRoomRent" asp-route-id="@room.Id" method="get">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        }
                        <form asp-controller="Library" asp-action="DetailsRoom" asp-route-id="@room.Id" method="get">
                            <input type="hidden" name="previousPage" value="PersonalInfo/RentedRooms" />
                            <button type="submit" class="btn btn-danger">Details</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .showcase-message {
        color: #e91e63;
        margin-bottom: 20px;
        text-align: center;
    }

    .rented-rooms-container {
        height: 670px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        padding-top: 5px;
        padding: 10px;
    }

    .flip-card-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
    }

    .flip-card {
        width: 250px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
        margin-bottom: 20px;
    }

    .flip-card-room {
        width: 300px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
    }

    .flip-card-room:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front img {
        width: 100%;
        height: 100%;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        color: black;
        backface-visibility: hidden;
    }

    .flip-card-back {
        background-color: #fc819e;
        transform: rotateY(180deg);
    }

    .flip-card-back form {
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #D20062;
        border-color: #D20062;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary:hover, .btn-danger:hover {
        background-color: #e91e63;
        border-color: #e91e63;
    }

    .bold-label {
        font-weight: bold;
    }

    .pagination-buttons {
        display: flex;
        justify-content: center;
        align-content: space-around;
        margin-bottom: 30px;
    }

    </style>
