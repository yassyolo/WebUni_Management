@model WebUni_Management.Core.Models.Library.EditBookViewModel
@{
	ViewBag.Message = "Edit Book";
}
<div class="edit-container">
    <h2>Edit books here:</h2>
<form class="post-form" method="post">
    <div class="form-member">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control" placeholder="Title..">
    <span asp-validation-for="Title" class="validation"></span>
    </div>
        <div class="form-member">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" placeholder="Author..">
            <span asp-validation-for="Author" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description..">
            <span asp-validation-for="Description" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="PublishYear">PublishYear</label>
            <input asp-for="PublishYear" class="form-control" placeholder="PublishYear..">
            <span asp-validation-for="PublishYear" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="ImageUrl">ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Image URL..">
            <span asp-validation-for="ImageUrl" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="CategoryId">CategoryId</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">Select Category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="validation"></span>
        </div>
        <form asp-controller="Library" asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</form>
</div>
<style>
    .edit-container {    
        height: 700px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction:column;
        justify-content: center;
        padding: 10px;
    }
	
	.post-form {
		display: flex;
		flex-direction: column;
		align-content: center;
		padding-top: 5px;
		padding: 10px;
        height: 80%;
	}
	.form-member {
		margin-bottom: 20px;
	}
	.form-member label {
		font-weight: bold;
	}
	.form-member input {
        align-content: center;
        justify-content:center;
		width: 85%;
		height: 30px;
		border: 1px solid #e91e63;
		border-radius: 3px;
	}
    .form-select
    {
        width:85%;
        border: 1px solid #e91e63;
        border-radius: 3px;
    }

    input.form-control[name="Description"] {
        height: 90px;
    }
	.validation {
		color: red;
	}

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
        width: 20%;
    }

        .btn-primary:hover {
            background-color: #e91e63;
            border-color: #e91e63;
        }
</style>
