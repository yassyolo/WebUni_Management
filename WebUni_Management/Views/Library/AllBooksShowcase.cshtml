        margin-left: 4%;
        width: 8%;
        margin-top: 24px;
    }

    .form-search-engine{
		width: 100%;
	}

    .all-showcase-container {
        height: 670px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        padding-top: 5px;
        padding: 10px;
    }

    .all-showcase-message {
        margin-bottom: 20px;
        text-align:center;
    }

    .flip-card-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
    }

    .flip-card {
        width: 250px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
        margin-bottom: 20px;
    }

    .flip-card-room {
        width: 300px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
    }

    .flip-card-room:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front img {
        width: 100%;
        height: 100%;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        color: black;
        backface-visibility: hidden;
    }


    .flip-card-back {
        background-color: #fc819e;
        transform: rotateY(180deg);
    }

    .flip-card-back form {
        margin-top: 10px; 
    }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 20px;
    }

    .btn-danger {
        background-color: #D20062;
        border-color: #D20062;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary:hover, .btn-danger:hover {
        background-color: #e91e63;
        border-color: #e91e63;
    }

    .bold-label {
        font-weight: bold;
    }

    .pagination-buttons
    {
        display:flex;
        justify-content:center;
        align-content:space-around;
