@model IEnumerable<WebUni_Management.Core.Models.Library.BookInfoViewModel>
@{
    ViewBag.Title = "Welcome to the Web Uni Library!";
}
<div class="index-library-container">
    <div class="index-library-text">
        <div class="image-holder">
            <img class="library-photo" src="@Url.Content("~/images/library.jpg")" alt="Library Photo" />
        </div>
        <div class="text-info">
            <h2>@ViewBag.Title</h2>
            <h5>Explore our vast collection of books covering a wide range of topics and genres. Whether you're a student, a researcher, or an avid reader, our library has something for everyone. Enjoy browsing through our catalog and discovering new knowledge. Happy reading and don't hesitate to ask our knowledgeable staff for recommendations or assistance.</h5>
        </div>
    </div>

    <div class="flip-card-container">
        @foreach (var item in Model)
        {
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="@item.ImageUrl" alt="Avatar">
                    </div>
                    <div class="flip-card-back">
                        <h6>@item.Title</h6>
                        <h6>@item.Category</h6>
                        <form asp-controller="Library" asp-action="Details" method="post">
                            <button type="submit" class="btn btn-danger">Details</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .flip-card-container {
        display: flex;
        flex-direction: row; /* Display cards horizontally */
        justify-content: center; /* Center the cards horizontally */
        gap: 20px; /* Add some space between the cards */
    }

    .flip-card {
        width: 300px;
        height: 200px;
        border: 1px solid #f1f1f1;
        perspective: 1000px; /* Remove this if you don't want the 3D effect */
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden; /* Safari */
        backface-visibility: hidden;
    }

    .flip-card-front {
        background-color: #bbb;
        color: black;
    }

    .flip-card-back {
        background-color: dodgerblue;
        color: white;
        transform: rotateY(180deg);
    }

    .index-library-container {
        height: 800px;
        width: 1120px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction:column;
        padding-top: 5px;

        padding: 10px; /* Add padding to create space around the content */
    }

    .image-holder {
        width: 80%;
        max-width: 400px; /* Limit maximum width */
        /* Center the image */
         /* Add space between image and text */
         margin-bottom:20px;
    }

    .library-photo {
        width: 100%; /* Make the image responsive */
        height: 100%;
        border: 1px solid #e91e63;
        border-radius: 2px;

    }

    .text-info {
        width: 80%;
        max-width: 500px; /* Limit maximum width */
        color: black;
        margin-bottom: 20px; /* Add space between image and text */
    }
    .index-library-text{
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
    }

</style>
