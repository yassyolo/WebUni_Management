@model IEnumerable<WebUni_Management.Core.Models.News.NewsArticleIndexViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="home-index-container">
    <div class="home-introduction">

    </div>
    <div class="news-events-container">
        <div class="news-container">
            <h6><strong>News</strong></h6>
            @foreach(var article in Model)
            {
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="@article.ImageUrl" alt="Book Cover">
                        </div>
                        <div class="flip-card-back">
                            <h6>@article.Title</h6>
                            <form asp-controller="News" asp-action="Details" asp-route-id="@article.Id" method="get">
                                <button type="submit" class="btn btn-danger">Details</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="events-container">
            <h6><strong>Events</strong></h6>
        </div>
    </div>
</div>
<style>
    .home-index-container {
        height: 670px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: row;
        padding-top: 5px;
        padding: 10px;
    }
    .home-introduction{
        width: 50%;
    }
    .news-events-container{
        width:45%;
        float:left;
    }
    .news-container{
        width:50%;
        float: left;
    }
    .flip-card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .flip-card {
        width: 230px;
        height: 190px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
        margin-bottom: 20px;
    }

    .flip-card-room {
        width: 300px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
    }

        .flip-card-room:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

    .flip-card-front img {
        width: 100%;
        height: 100%;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        color: black;
        backface-visibility: hidden;
    }


    .flip-card-back {
        background-color: #fc819e;
        transform: rotateY(180deg);
    }

        .flip-card-back form {
            margin-top: 10px;
        }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 20px;
    }

        .btn-primary:hover {
            background-color: #e91e63;
            border-color: #e91e63;
        }
   .events-container{
        width: 50%;
        float: left;
   }
</style>
