@model WebUni_Management.Core.Models.Account.RegisterViewModel
@{
	ViewBag.Message = "Register";
}
<h1>@ViewBag.Message</h1>
<div class="register-container">
    <h6 class="welcome-message">Welcome to the Web University Student Management Platform. To start the journey make a profile first.</h6>
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
            <label for="email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label for="Username" class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label for="password" class="form-label">Password</label>
        <input asp-for="InitialPassword" type="password" class="form-control" />
        <span asp-validation-for="InitialPassword" class="text-danger"></span>
    </div>
    <button type="submit" id="submit" class="btn btn-primary">Register</button>
</form>
    </div>
<style>
    .register-container {
        height: 440px;
        width: 550px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        padding: 5px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    .form-group {
        padding-top: 15px;
        margin-bottom: 10px;
        align-items: center;
    }

    .form-label {
        font-weight: bold;
        text-align: center;
    }

    .form-control {
        width: 500px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-primary {
        background-color: #fec7b4;
        border-color: #fec7b4;
        color: black;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #fc819e;
            border-color: #fc819e;
        }

    .welcome-message {
        text-align: center;
    }
</style>


@section Scripts
{
    <script src="~/js/Account/Register.js"></script>
}
