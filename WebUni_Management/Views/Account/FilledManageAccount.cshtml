@model WebUni_Management.Core.Models.Account.ManageAccountViewModel
@{
	ViewBag.Message = "My Account";
}


<div class="details-container">

	<div class="news-description">
		<h2>@ViewBag.Message</h2>
		<h3><strong>Name:</strong> @Model.FirstName @Model.LastName, <strong>Age</strong>:@Model.Age</h3>
		<h3><strong>Faculty number:</strong> @Model.FacultyNumber</h3>
		<h5><strong>Email</strong>: @Model.Email, <strong>Phone Number</strong>: @Model.PhoneNumber</h5>
		<h5><strong>Faculty</strong>: @Model.Faculty</h5>
	     <h5><strong>Major</strong>: @Model.Major</h5>
		 <h5><strong>Course Term</strong>: @Model.CourseTerm</h5>
		@if (Model.QrCode != null)
		{
			<img src="@ViewBag.ImageData">
		}
		else
		{
			<p>No QR Code available</p>
		}

		<div class="action-buttons">

			<form asp-controller="Account" asp-action="EditAccount" asp-route-id="@Model.Id"method="get">
				<button type="submit" class="btn btn-primary">Edit</button>
			</form>
		</div>
	</div>
</div>
<style>
	h3, h5, h2 {
		margin-bottom: 14px;
	}


	strong {
		color: #e93e63;
	}

	.details-container {
		height: 430px;
		width: 680px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}


	.news-description {
		width: 100%;
		margin-top: 20px;
		height: 700px;
		float: right;
	}

		.news-description b {
			color: #e91e63;
		}

		.news-description h5 {
			color: black;
		}



	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}

	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 8px 18px;
		cursor: pointer;
	}

		.btn-primary:hover {
			background-color: #e91e63;
			border-color: #e91e63;
		}
</style>

