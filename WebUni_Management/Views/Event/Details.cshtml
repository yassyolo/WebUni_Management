@model WebUni_Management.Core.Models.Event.EventDetailsViewModel
@{
	ViewBag.Title = "Event Details";
}

<h6>@ViewBag.Message</h6>
<div class="details-container">
	<div class="event-img">
		<img src="@Model.ImageUrl" alt="Event Image" />
	</div>
	<div class="event-description">
		<h3><b>Name</b>: @Model.Name</h3>
		<h3><b>Guest Lecturer</b>: @Model.GuestParticipant</h3>
		<h5><b>Start time</b>: @Model.StartTime</h5>
		<h5><b>End time</b>: @Model.EndTime</h5>
		<h5><b>Description</b>: @Model.Description</h5>
		<h5><b>Capacity</b>: @Model.Capacity People</h5>
		<div class="action-buttons">
			@if (User.IsInRole("Admin"))
			{
				<form asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id" method="get">
					<input type="hidden" name="previousPage" value="Event/Details" />
					<button type="submit" class="btn btn-primary">Edit</button>
				</form>
				<form asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" method="get">
					<button type="submit" class="btn btn-primary">Delete</button>
				</form>
			}
			<form asp-controller="Home" asp-action="Back" method="get">
				<input type="hidden" name="previousPage" value="@ViewBag.PreviousPage" />
				<button type="submit" class="btn btn-primary">Back</button>
			</form>

		</div>
	</div>
</div>
<style>
	.details-container {
		height: 650px;
		width: 1130px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}

	.event-img {
		width: 35%;
		margin-top: 20px;
		margin-right: 30px;
		margin-left: 10px;
		height: 400px;
		float: left;
	}

	.event-img img {
		width: 100%;
		height: 100%;
		border: 1px solid #e91e63;
		border-radius: 3px;
	}

	.event-description {
		width: 65%;
		margin-top: 20px;
		height: 700px;
	}

	.event-description b {
		color: #e91e63;
	}

	.event-description h5 {
		color: black;
	}

	.event-description button {
		margin-top: 10px;
	}

	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}
	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 10px 20px;
		cursor: pointer;
	}

	.btn-primary:hover {
		background-color: #e91e63;
		border-color: #e91e63;
	}
	
</style>

