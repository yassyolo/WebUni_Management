@model WebUni_Management.Core.Models.Event.EventFormViewModel
@{
    ViewBag.Message = "Add Events";
}
<div class="add-container">
    <h2>Add new events here:</h2>
    <form class="post-form" method="post">
        <div class="form-member">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name..">
            <span asp-validation-for="Name" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="StartTime">Start time</label>
            <input asp-for="StartTime" class="form-control" placeholder="Start time..">
            <span asp-validation-for="StartTime" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="EndTime">End time</label>
            <input asp-for="EndTime" class="form-control" placeholder="End time..">
            <span asp-validation-for="EndTime" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="Capacity">Capacity</label>
            <input asp-for="Capacity" class="form-control" placeholder="Capacity..">
            <span asp-validation-for="Capacity" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="GuestParticipant">Guest Lecturer</label>
            <input asp-for="GuestParticipant" class="form-control" placeholder="Guest Lecturer..">
            <span asp-validation-for="GuestParticipant" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description..">
            <span asp-validation-for="Description" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="ImageUrl">ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Image URL..">
            <span asp-validation-for="ImageUrl" class="validation"></span>
        </div>
        <div class="action-buttons">
        <form asp-controller="Event" asp-action="Add" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
    </form>
</div>
<style>
    .add-container {
        height: 750px;
        width: 900px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 10px;
    }

    h2 {
        color: #e91e63;
    }

    .post-form {
        display: flex;
        flex-direction: column;
        padding: 10px;
        height: 80%;
    }

    .form-member {
        margin-bottom: 20px;
    }

    .form-member label {
        font-weight: bold;
    }

    .form-member input {
        align-content: center;
        justify-content: center;
        width: 95%;
        height: 30px;
        border: 1px solid #e91e63;
        border-radius: 3px;
    }

    .form-select {
        width: 85%;
        border: 1px solid #e91e63;
        border-radius: 3px;
    }

    input.form-control[name="Description"] {
        height: 90px;
    }

    .validation {
        color: red;
    }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #e91e63;
        border-color: #e91e63;
    }

    .action-buttons {
        display: flex;
        margin-top: auto;
        gap: 20px;
    }
</style>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
