<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Uni</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebUni_Management.styles.css" asp-append-version="true" />
   
</head>
<body>
    <header class="header">
        <div class="menu-container">
          <div class="header-main">
            <div class="logo">
                <a href="#">Web University</a>
            </div>
            <nav class="nav-menu">
                <ul class="menu">
                    <li class="menu-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="News" asp-action="Index">News</a>
                    </li>
                    <li class="menu-item menu-item-has-children">
                        <a asp-controller="Events" asp-action="Index">Events<i class="plus"></i></a>
                       <ul class="sub-menu">
                        <li class="menu-item"><a asp-controller="Events" asp-action="AllEvents">All Events</a></li>
                        <li class="menu-item"><a asp-controller="Events" asp-action="MyEvents">My Events</a></li>
                       </ul>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Library" asp-action="Index">Library</a>
                    </li>
                    <li class="menu-item">
                        <a asp-controller="Student" asp-action="">Personal info</a>
                    </li>
                    <li class="menu-item menu-item-has-children">
                        <a asp-controller="Account" asp-action="">Account<i class="plus"></i></a>
                        <ul class="sub-menu">
                           <li class="menu-item"><a asp-controller="Account" asp-action="Register">Register</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
          </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </header>
   <section class="home-section"></section>
    
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplication7 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
@section Scripts {
	<script src="~/js/site.js"></script>
}
</html>
