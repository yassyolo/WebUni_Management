 @model WebUni_Management.Core.Models.News.ApproveNewsViewModel
@{
    ViewBag.Message = "Approve news articles!";
}

<div class="all-showcase-container">
    <div class="all-showcase-message">
        <h2>@ViewBag.Message</h2>
    </div>

    @{
        var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        var maxPage = Math.Ceiling((double)Model.TotalNews /
        Model.NewsPerPage);
    }
    <div class="pagination-buttons">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="News"
           asp-action="ApproveNews"
           asp-route-currentPage="@previousPage"><<</a>
        @{
            var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
            !Model.News.Any();
        }
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="News"
           asp-action="ApproveNews"
           asp-route-currentPage="@(Model.CurrentPage + 1)">>></a>
    </div>

    @if (!Model.News.Any())
    {
        <h2 class="text-center">No new news!</h2>
    }

    <div class="flip-card-container">
        @foreach (var article in Model.News)
        {
            <div class="card">
                <img src="@article.ImageUrl" class="card-img" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Title: @article.Title</h5>
                    <h5>Author:@article.Title</h5>
                    <h5>Publish Date:@article.PublishedOn</h5>                    
                    <form asp-controller="News" asp-action="Details" asp-route-id="@article.Id" method="get">
                        <button type="submit" class="btn btn-danger">Details</button>
                    </form>
                    <form asp-controller="News" asp-action="Approve" asp-route-id="@article.Id" method="get">
                        <button type="submit" class="btn btn-danger">Publish</button>
                    </form>
                    <form asp-controller="News" asp-action="Disapprove" asp-route-id="@article.Id" method="get">
                        <button type="submit" class="btn btn-danger">Discard</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .all-showcase-message {
        color: #e91e63;
        margin-bottom: 20px;
    }

    .all-search-engine {
        margin-bottom: 30px;
        width: 90%;
        display: flex;
        gap: 20px;
    }

    .category-search {
        width: 40%;
        float: left;
        margin-right: 8%;
    }

    .search-term {
        width: 27%;
        float: left;
    }

    .submit {
        float: left;
        margin-left: 4%;
        width: 8%;
        margin-top: 24px;
    }

    .form-search-engine {
        width: 100%;
    }

    .all-showcase-container {
        height: 670px;
        width: 1130px;
        background-color: white;
        margin: auto;
        border: 2px solid #e91e63;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        padding-top: 5px;
        padding: 10px;
    }

    .all-showcase-message {
        margin-bottom: 20px;
    }

    .flip-card-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
    }

    .card {
        width: 250px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
        margin-bottom: 20px;
    }

    .flip-card-room {
        width: 300px;
        height: 300px;
        border: 1px solid #e91e63;
        border-radius: 3px;
        perspective: 1000px;
    }

        .flip-card-room:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

    .flip-card-front img {
        width: 100%;
        height: 100%;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        color: black;
        backface-visibility: hidden;
    }

    .flip-card-back {
        background-color: #fc819e;
        transform: rotateY(180deg);
    }

        .flip-card-back form {
            margin-top: 10px;
        }

    .btn-primary {
        background-color: #fc819e;
        border-color: #fc819e;
        color: black;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #e91e63;
            border-color: #e91e63;
        }

    .bold-label {
        font-weight: bold;
    }

    .pagination-buttons {
        display: flex;
        justify-content: center;
        align-content: space-around;
        margin-bottom: 30px;
    }
</style>
