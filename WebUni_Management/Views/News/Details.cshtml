@model WebUni_Management.Core.Models.News.NewsDetailsViewModel
@{
	ViewBag.Title = "News Details";
}

<h6>@ViewBag.Message</h6>
<div class="details-container">
	<div class="news-img">
		<img src="@Model.ImageUrl" alt="News Cover" />
	</div>
	<div class="news-description">
		<h3><b>Title:</b> @Model.Title</h3>
		<h5><b>Published on:</b> @Model.PublishedOn</h5>
		@if (!string.IsNullOrWhiteSpace(Model.Author))
		{
			<h5><b>Author:</b> @Model.Author</h5>
		}
		<h5><b>Description:</b> @Model.Content</h5>
		<div class="action-buttons">
		@if (User.IsInRole("Admin"))
		{
				<form asp-controller="News" asp-action="Edit" asp-route-id="@Model.Id" method="get">
					<input type="hidden" name="previousPage" value="News/Index" />
					<button type="submit" class="btn btn-danger">Edit</button>
				</form>
		    <form asp-controller="News" asp-action="Delete" asp-route-id="@Model.Id" method="get">
				<button type="submit" class="btn btn-primary">Delete</button>
			</form>
		}
			<form asp-controller="Home" asp-action="Back" method="get">
				<input type="hidden" name="previousPage" value="@ViewBag.PreviousPage" />
				<button type="submit" class="btn btn-primary">Back</button>
			</form>
		</div>
	</div>
</div>
<style>
	.details-container {
		height: 700px;
		width: 1130px;
		background-color: white;
		margin: auto;
		border: 2px solid #e91e63;
		border-radius: 8px;
		display: flex;
		flex-direction: row;
		align-content: space-between;
		padding-top: 5px;
		padding: 10px;
	}

	.news-img {
		width: 35%;
		margin-top: 20px;
		margin-right: 30px;
		margin-left: 10px;
		height: 400px;
		float: left;
	}

	.news-img img {
		width: 100%;
		height: 100%;
		border: 1px solid #e91e63;
		border-radius: 3px;
	}

	.news-description {
		width: 65%;
		margin-top: 20px;
		height: 700px;
		float: right;
	}

	.news-description b {
		color: #e91e63;
	}

	.news-description h5 {
		color: black;
	}

	.news-description button {
		margin-top: 10px;
	}

	.action-buttons {
		display: flex;
		margin-top: auto;
		gap: 20px;
	}
	.btn-primary {
		background-color: #fc819e;
		border-color: #fc819e;
		color: black;
		border-radius: 4px;
		padding: 10px 20px;
		cursor: pointer;
	}

	.btn-primary:hover {
		background-color: #e91e63;
		border-color: #e91e63;
	}
</style>

